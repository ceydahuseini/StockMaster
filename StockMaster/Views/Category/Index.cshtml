@model List<StockMaster.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="fas fa-tag"></i> Category Management</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/Category/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Category
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i> Category List
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td><strong>@category.Name</strong></td>
                            <td>@(category.Description ?? "-")</td>
                            <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/Category/Edit/@category.CategoryId" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteCategory(@category.CategoryId)" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No categories found.</p>
                <a href="/Category/Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Category
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function deleteCategory(id) {
            if (confirm('Are you sure you want to delete this category?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Category/Delete/' + id;
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}