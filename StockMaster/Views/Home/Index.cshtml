@model StockMaster.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-0"><i class="fas fa-chart-line"></i> Dashboard</h2>
        <p class="text-muted">Welcome, @Context.Session.GetString("FullName")</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Today's Sales</p>
                    <h3 class="mb-0">@Model.TotalSalesToday.ToString("N2") MKD</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <i class="fas fa-coins"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Monthly Sales</p>
                    <h3 class="mb-0">@Model.TotalSalesMonth.ToString("N2") MKD</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);">
                    <i class="fas fa-chart-bar"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Products</p>
                    <h3 class="mb-0">@Model.StockSummary["TotalProducts"]</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <i class="fas fa-box"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Stock</p>
                    <h3 class="mb-0">@Model.StockSummary["TotalStock"]</h3>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <i class="fas fa-cubes"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-exclamation-triangle"></i> Low Stock Products
            </div>
            <div class="card-body">
                @if (Model.LowStockProducts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Reorder Level</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.LowStockProducts)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>
                                            <span class="badge bg-warning">
                                                @product.ReorderLevel
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/PurchaseOrder/Create" class="btn btn-sm btn-primary">
                                                <i class="fas fa-plus"></i> Create Order
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <p>All products have sufficient stock</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-bolt"></i> Quick Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a href="/Sale/Create" class="btn btn-lg btn-success">
                        <i class="fas fa-shopping-cart me-2"></i> Create New Sale
                    </a>
                    <a href="/Product/Create" class="btn btn-lg btn-primary">
                        <i class="fas fa-box me-2"></i> Add New Product
                    </a>
                    <a href="/PurchaseOrder/Create" class="btn btn-lg btn-warning text-white">
                        <i class="fas fa-truck me-2"></i> Create Purchase Order
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <i class="fas fa-info-circle"></i> System Information
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-warehouse text-primary me-2"></i>
                        <strong>Total Warehouses:</strong> @Model.StockSummary["Warehouses"]
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-calendar text-success me-2"></i>
                        <strong>Date:</strong> @DateTime.Now.ToString("dd.MM.yyyy")
                    </li>
                    <li>
                        <i class="fas fa-user text-info me-2"></i>
                        <strong>User:</strong> @Context.Session.GetString("Username")
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>