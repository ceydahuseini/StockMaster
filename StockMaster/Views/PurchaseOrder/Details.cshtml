@model StockMaster.Models.PurchaseOrder
@{
    ViewData["Title"] = "Order Details";
    var totalCost = Model.PurchaseOrderItems.Sum(i => i.Quantity * i.UnitCost);
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-file-invoice"></i> Purchase Order Details</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/PurchaseOrder/Index">Purchase Orders</a></li>
                <li class="breadcrumb-item active">Order #PO-@Model.PoId</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-info-circle"></i> Order Information</span>
                @switch (Model.Status)
                {
                    case "Pending":
                        <span class="badge bg-warning fs-6">
                            <i class="fas fa-clock"></i> Pending
                        </span>
                        break;
                    case "Confirmed":
                        <span class="badge bg-info fs-6">
                            <i class="fas fa-check"></i> Confirmed
                        </span>
                        break;
                    case "Received":
                        <span class="badge bg-success fs-6">
                            <i class="fas fa-box-check"></i> Received
                        </span>
                        break;
                }
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted small mb-1">Order Number</label>
                        <h5><strong>#PO-@Model.PoId</strong></h5>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small mb-1">Order Date</label>
                        <h5>
                            <i class="fas fa-calendar me-2"></i>
                            @Model.OrderDate.ToString("dd.MM.yyyy")
                        </h5>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted small mb-1">Supplier</label>
                        <h5>
                            @if (Model.Supplier != null)
                            {
                                <span>
                                    <i class="fas fa-building me-2"></i>
                                    @Model.Supplier.Name
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </h5>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small mb-1">Warehouse</label>
                        <h5>
                            <i class="fas fa-warehouse me-2"></i>
                            @Model.Warehouse.Name
                        </h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label class="text-muted small mb-1">Expected Delivery</label>
                        <h5>
                            <i class="fas fa-truck me-2"></i>
                            @Model.ExpectedDeliveryDate.ToString("dd.MM.yyyy")
                        </h5>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small mb-1">Actual Delivery</label>
                        <h5>
                            @if (Model.ActualDeliveryDate != null)
                            {
                                <span class="text-success">
                                    <i class="fas fa-check-circle me-2"></i>
                                    @Model.ActualDeliveryDate.Value.ToString("dd.MM.yyyy")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Not yet received</span>
                            }
                        </h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="fas fa-list"></i> Order Items
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Order Quantity</th>
                                <th class="text-center">Received Quantity</th>
                                <th class="text-end">Unit Cost</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PurchaseOrderItems)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Product.Name</strong>
                                        <br>
                                        <small class="text-muted">SKU: @item.Product.Sku</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@item.Quantity</span>
                                    </td>
                                    <td class="text-center">
                                        @if (item.ReceivedQuantity > 0)
                                        {
                                            <span class="badge bg-success">@item.ReceivedQuantity</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @item.UnitCost.ToString("N2") MKD
                                    </td>
                                    <td class="text-end">
                                        <strong>@((item.Quantity * item.UnitCost).ToString("N2")) MKD</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="4" class="text-end">
                                    <strong>TOTAL COST:</strong>
                                </td>
                                <td class="text-end">
                                    <h5 class="mb-0 text-primary">
                                        <strong>@totalCost.ToString("N2") MKD</strong>
                                    </h5>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-calculator"></i> Summary
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Product Types:</span>
                    <strong>@Model.PurchaseOrderItems.Count</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Quantity:</span>
                    <strong>@Model.PurchaseOrderItems.Sum(i => i.Quantity)</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Received Quantity:</span>
                    <strong class="text-success">@Model.PurchaseOrderItems.Sum(i => i.ReceivedQuantity)</strong>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <h5>Total Cost:</h5>
                    <h5 class="text-primary">
                        <strong>@totalCost.ToString("N2") MKD</strong>
                    </h5>
                </div>
            </div>
        </div>

        @if (Model.Supplier != null)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-building"></i> Supplier Information
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Company:</strong><br>
                        @Model.Supplier.Name
                    </p>
                    <p class="mb-2">
                        <strong>Contact:</strong><br>
                        @Model.Supplier.ContactPerson
                    </p>
                    <p class="mb-2">
                        <strong>Email:</strong><br>
                        <a href="mailto:@Model.Supplier.Email">@Model.Supplier.Email</a>
                    </p>
                    <p class="mb-2">
                        <strong>Phone:</strong><br>
                        @Model.Supplier.Phone
                    </p>
                    <p class="mb-0">
                        <strong>Address:</strong><br>
                        @Model.Supplier.Address
                    </p>
                </div>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <i class="fas fa-tools"></i> Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.Status != "Received")
                    {
                        <form method="post" action="/PurchaseOrder/Receive/@Model.PoId">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100"
                                    onclick="return confirm('Are you sure you want to receive this order? Stock will be updated.')">
                                <i class="fas fa-box-check"></i> Receive Order
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success mb-0">
                            <i class="fas fa-check-circle"></i>
                            Order received and stock updated
                        </div>
                    }
                    <button class="btn btn-primary" onclick="window.print()">
                        <i class="fas fa-print"></i> Print
                    </button>
                    <a href="/PurchaseOrder/Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>

        @if (Model.Status == "Received")
        {
            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-info-circle"></i> Delivery Information
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        <i class="fas fa-calendar-check me-2"></i>
                        <strong>Received Date:</strong><br>
                        @Model.ActualDeliveryDate.Value.ToString("dd.MM.yyyy HH:mm")
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .navbar, .breadcrumb, .card:last-child, button, form {
                display: none !important;
            }

            .card {
                border: 1px solid #000 !important;
                box-shadow: none !important;
            }
        }
    </style>
}