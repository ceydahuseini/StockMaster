@model List<StockMaster.Models.Sale>
@{
    ViewData["Title"] = "Sales";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="fas fa-shopping-cart"></i> Sales Management</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/Sale/Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Sale
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Sales</p>
                    <h4 class="mb-0">@Model.Count</h4>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);">
                    <i class="fas fa-receipt"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Amount</p>
                    <h4 class="mb-0">@Model.Sum(s => s.TotalAmount).ToString("N2") MKD</h4>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <i class="fas fa-coins"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Today's Sales</p>
                    <h4 class="mb-0">@Model.Count(s => s.DateTime.Date == DateTime.Today)</h4>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <i class="fas fa-calendar-day"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Average Sale</p>
                    <h4 class="mb-0">@(Model.Any() ? (Model.Sum(s => s.TotalAmount) / Model.Count).ToString("N2") : "0.00") MKD</h4>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i> Sales List
    </div>
    <div class="card-body">
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Search sales..." id="searchBox">
        </div>

        <div class="table-responsive">
            <table class="table table-hover" id="salesTable">
                <thead>
                    <tr>
                        <th>Sale No</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Warehouse</th>
                        <th>User</th>
                        <th>Total Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td>
                                <strong>#@sale.SaleId</strong>
                            </td>
                            <td>
                                <i class="fas fa-calendar me-1"></i>
                                @sale.DateTime.ToString("dd.MM.yyyy HH:mm")
                            </td>
                            <td>
                                @if (sale.Customer != null)
                                {
                                    <span>
                                        <i class="fas fa-user me-1"></i>
                                        @sale.Customer.Name
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <i class="fas fa-warehouse me-1"></i>
                                @sale.Warehouse.Name
                            </td>
                            <td>
                                @if (sale.User != null)
                                {
                                    <span class="badge bg-info">
                                        @sale.User.Username
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <strong class="text-success">
                                    @sale.TotalAmount.ToString("N2") MKD
                                </strong>
                            </td>
                            <td>
                                <a href="/Sale/Details/@sale.SaleId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No sales records found.</p>
                <a href="/Sale/Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create First Sale
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#searchBox').on('keyup', function() {
                const value = $(this).val().toLowerCase();
                $('#salesTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}