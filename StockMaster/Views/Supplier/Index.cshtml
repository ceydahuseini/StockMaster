@model List<StockMaster.Models.Supplier>
@{
    ViewData["Title"] = "Suppliers";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="fas fa-truck"></i> Supplier Management</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/Supplier/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Supplier
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i> Supplier List
    </div>
    <div class="card-body">
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Search suppliers..." id="searchBox">
        </div>

        <div class="table-responsive">
            <table class="table table-hover" id="suppliersTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Company Name</th>
                        <th>Contact Person</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td>@supplier.SupplierId</td>
                            <td><strong>@supplier.Name</strong></td>
                            <td>@supplier.ContactPerson</td>
                            <td>@supplier.Email</td>
                            <td>@supplier.Phone</td>
                            <td>@supplier.Address</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/Supplier/Edit/@supplier.SupplierId" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteSupplier(@supplier.SupplierId)" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No suppliers found.</p>
                <a href="/Supplier/Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Supplier
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function deleteSupplier(id) {
            if (confirm('Are you sure you want to delete this supplier?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Supplier/Delete/' + id;
                document.body.appendChild(form);
                form.submit();
            }
        }

        $(document).ready(function() {
            $('#searchBox').on('keyup', function() {
                const value = $(this).val().toLowerCase();
                $('#suppliersTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}