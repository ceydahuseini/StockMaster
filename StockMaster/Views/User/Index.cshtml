@model List<StockMaster.Models.User>
@{
    ViewData["Title"] = "Users";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="fas fa-user-cog"></i> User Management</h2>
    </div>
    <div class="col-md-6 text-end">
        <a href="/User/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New User
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i> User List
    </div>
    <div class="card-body">
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Search users..." id="searchBox">
        </div>

        <div class="table-responsive">
            <table class="table table-hover" id="usersTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td><strong>@user.Username</strong></td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge bg-info">@user.Role</span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/User/Edit/@user.UserId" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteUser(@user.UserId)" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No users found.</p>
                <a href="/User/Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First User
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function deleteUser(id) {
            if (confirm('Are you sure you want to delete this user?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/User/Delete/' + id;
                document.body.appendChild(form);
                form.submit();
            }
        }

        $(document).ready(function() {
            $('#searchBox').on('keyup', function() {
                const value = $(this).val().toLowerCase();
                $('#usersTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}